<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pf.server.mapper.UseImageMapper">

    <sql id="fields">
        relationId,imgPath
    </sql>

    <sql id="fields_id">
        id,
        <include refid="fields"/>
    </sql>

    <sql id="table_name">use_image</sql>

    <sql id="selector">
        select
        <include refid="fields_id"/>
        from
        <include refid="table_name"/>
    </sql>

    <sql id="condition">
        <where>
            <if test="model.relationId != null and model.relationId != ''">relationId=#{model.relationId}</if>
            <if test="model.imgPath != null and model.imgPath != ''">and imgPath=#{model.imgPath}</if>
        </where>
    </sql>
	
    <select id="readById" resultType="com.pf.common.po.UseImagePo">
        <include refid="selector"/>
        where id=#{id} limit 1;
    </select>

    <select id="findUserByCondition" resultType="com.pf.common.po.UseImagePo">
        <include refid="selector"/>
        <include refid="condition"/>
        limit 1;
    </select>
    
    <select id="getByIds" resultType="com.pf.common.po.UseImagePo">
        <include refid="selector"/>
        <if test="ids != null">
	        where relationId in
	        <foreach item="idItem" collection="ids" index="index" open="(" separator="," close=")"> 
				#{idItem}
			</foreach>
		</if>
    </select>
   
</mapper>


